<div class="well span3 pull-right">
  <%= form_for [@collection, @album], html: { id: 'album-add-form' }, remote: true do |f| %>
    <%= render 'shared/errors', object: @album %>

    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='control-group'>
      <%= f.label :artist %>
      <%= f.text_field :artist %>
    </div>

    <div class='control-group'>
      <%= f.label :release_year %>
      <%= f.text_field :release_year %>
    </div>

    <div class='control-group'>
      <%= f.label :catalog_number %>
      <%= f.text_field :catalog_number%>
    </div>

    <div class='control-group'>
      <%= f.label :record_label %>
      <%= f.text_field :record_label %>
    </div>

    <%= f.submit @album.new_record? ? 'Add Album' : 'Update Album', class: 'btn btn-primary' %>
  <% end %>
</div>
