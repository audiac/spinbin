<div class="row span8">
  <div class="well span8">
    <div class="span6">
      <h4><%= album.title %></h4>
      <p><%= album.artist %></p>
    </div>
    <ul class="pull-right unstyled text-right span2">
      <li><%= album.release_year %></li>
      <li><%= album.catalog_number %></li>
      <li><%= album.record_label %></li>
      <li><%= link_to 'edit', edit_collection_album_path(@collection, album) %></li>
      <li><%= link_to 'remove', collection_album_path(@collection, album, user: @user), method: :delete %></li>
    </ul>
  </div>
</div>
