<%= render 'shared/content_title', title: "#{@collection.name}" %>
<%= link_to 'Edit Collection', edit_user_collection_path(@user, @collection) %>

<div class="well">
  <%= form_for [@collection, @album] do |f| %>
    <%= render 'shared/errors', object: @album %>

    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='control-group'>
      <%= f.label :artist %>
      <%= f.text_field :artist %>
    </div>

    <div class='control-group'>
      <%= f.label :release_year %>
      <%= f.text_field :release_year %>
    </div>

    <div class='control-group'>
      <%= f.label :catalog_number %>
      <%= f.text_field :catalog_number%>
    </div>

    <div class='control-group'>
      <%= f.label :record_label %>
      <%= f.text_field :record_label %>
    </div>

    <%= f.submit 'Add Album', class: 'btn btn-primary' %>
  <% end %>
</div>

  <%= @collection.albums.each do |album| %>
    <%= render 'albums/album', album: album %>
  <% end %>
